<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Система">
        <SwitchPreferenceCompat
            app:key="system_enable_navigator_fix_on_boot"
            app:title="Применять исправление вылетов навигаторов при загрузке"
            app:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory app:title="О приложении">
        <Preference
            app:key="_rt_about_version"
            app:title="Версия"
            app:summary="Неизвестно"
            app:persistent="false"
            />

        <Preference
            app:title="Автор"
            app:summary="Telegram: @mark99i"
            app:persistent="false"
            />

        <Preference
            app:title="Исходный код"
            app:summary="Github: https://github.com/mark99i/"
            app:persistent="false"
            />
    </PreferenceCategory>

</PreferenceScreen>